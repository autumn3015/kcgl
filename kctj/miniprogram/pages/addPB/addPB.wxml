<form bindsubmit="formSubmit" bindreset="formReset">
  
  <view class="section">
    <view class="section__title">牌别描述</view>
    <input name="pbms" placeholder="please input here" />
  </view>

  <view class="section section_gap">
    <view class="section__title">确认提交</view>
    <switch name="yes" checked="{{isChecked}}"/>
  </view>
 
  <view class="btn-area">
    <button formType="submit">Submit</button>
    <button formType="reset">Reset</button>
  </view>
</form>