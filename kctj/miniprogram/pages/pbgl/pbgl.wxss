.tr {
  height: 3rem;
  display: flex;
  border-bottom: 1rpx solid #ccc;
}

.th {
  flex: 1;
  height: 3rem;
  display: flex; 
  justify-content: center;
  align-items: center;
  color: #fff;
  background: rgb(4, 94, 38);
}

.th2 {
  flex: 3;
  height: 3rem;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  background: rgb(4, 94, 38);
}

.td {
  width:20%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.td2 {
  width: 60%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.box1{
  width: 100%;
  display: flex;
  margin-top: 1rem;
}

.box2{
  flex: 4;
  display: flex;
  flex-direction: column;
}

.box3{
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.td3 {
  display: flex;
  margin-bottom: 0.5rem;
  font-size: 32rpx;
  color:  rgb(4, 94, 38);
}

.workSiteStock{
  display: flex;
  min-height: 4rem;  
}

.circle{
  display: flex;
  width: 120rpx;
  height: 120rpx;
  background-color: rgb(4, 94, 38);
  border-radius: 300rpx;
  font-size: 32rpx;
  align-items: center;
  justify-content: center;
  color:#fff;
}

.uploader-text{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
