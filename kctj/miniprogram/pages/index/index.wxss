page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
}

.userinfo {
  margin-top: 40rpx;
  height: 100rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-nickname {
  font-size: 32rpx;
  background-color: white;
  background-size: cover;
  margin-left: 100rpx
}

.container1{
  display: flex;
  width: 100%;
  flex-direction: row

}

.uploader{
  display: flex;
  flex-direction: row;
  height: 100rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  align-items: center;
  justify-content: center;
  text-align: center;
  margin-top: 40rpx;
  transition: all 300ms ease;
}

.uploader-text {
  width: 100%;
  line-height: 40px;
  font-size: 34rpx;
  color: #007aff;
}


.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 2rem;
  align-items: center;
  border-bottom: 1rpx solid #ccc;
  
}

.th {
  width: 100%;
  height: 2rem;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgb(4, 94, 38);
  color: #fff;
}

.td {
    width:100%;
    justify-content: center;
    text-align: center;
}

.container{
  display: flex;
  flex-direction: column;
  
}

.guideTextPost{
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100%;
  height:2rem;
  padding-left: 20rpx;
  margin-top:60rpx;
}

.guideTextRemarks{
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100%;
  height:2rem;
  background:  rgba(0, 0, 0, 0.1);
  padding-left: 20rpx;
  
}

.remarksText{
  display: flex;
  flex-direction: column;
  width: 100%;
  height:3rem;
  margin-left: 20rpx;
}

.posterInfo{
  width: 100%;
  height:2rem;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  background:  rgba(0, 0, 0, 0.1);
  padding-right: 20rpx;
}

.operatorInfo{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  margin-right: 20rpx;
}
.operatorInfo-avatar {
  width: 64rpx;
  height: 64rpx;
  margin: 20rpx;
  border-radius: 50%;

}
.operateTime{
 width: 100%;
 display: flex;
 justify-content: flex-end;
 margin-right: 20rpx;
}

