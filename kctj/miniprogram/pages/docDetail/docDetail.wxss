
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
  border-bottom: 1rpx solid #ccc;
}

.bg-w{
  background: snow;
}

.th {
  width: 100%;
  height: 3rem;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgb(4, 94, 38);
  color: #fff;
}

.td {
    width:100%;
    justify-content: center;
    text-align: center;
    border-left: 1rpx solid  #ccc
}

.container{
  display: flex;
  flex-direction: column;
  
}

.remarks{
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100%;
  height:2rem;
  background:  #ccc;
  padding-left: 20rpx;
}

.remarksText{
  display: flex;
  flex-direction: column;
  width: 100%;
  height:4rem;
  margin-left: 20rpx;
}

.posterInfo{
  width: 100%;
  height:2rem;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  background:  #ccc;
  padding-right: 20rpx;
 
}

.operatorInfo{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  margin-right: 20rpx;
}
.operatorInfo-avatar {
  width: 64rpx;
  height: 64rpx;
  margin: 20rpx;
  border-radius: 50%;

}
.operateTime{
 width: 100%;
 display: flex;
 justify-content: flex-end;
 margin-right: 20rpx;
}

