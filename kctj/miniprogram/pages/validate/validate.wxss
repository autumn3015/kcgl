page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
}

.userinfo {
  margin-top: 40rpx;
  height: 100rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  
  /* background-color: white; */
}

.userinfo-nickname {
  font-size: 32rpx;
  background-color: white;
  background-size: cover;
  margin-left: 100rpx
}

.container1{
  display: flex;
  width: 100%;
  flex-direction: row

}

.uploader{
  display: flex;
  height: 100rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  align-items: center;
  justify-content: center;
  text-align: center;
  margin-top: 40rpx;
  transition: all 300ms ease;
}

.uploader-text {
  width: 100%;
  line-height: 40px;
  font-size: 34rpx;
  color:  rgb(13, 98, 209);
}
